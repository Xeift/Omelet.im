{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "warn",
            4
        ],
        "linebreak-style": [
            "warn",
            "windows"
        ],
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "eqeqeq": [
            "warn",
            "smart"
        ],
        "space-before-function-paren": [
            "warn",
            "never"
        ],
        "brace-style": [
            "warn",
            "stroustrup"
        ],
        "no-unused-vars": [0],
        "object-curly-spacing": [
            "warn",
            "always"
        ]
        
    }
}
